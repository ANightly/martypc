    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Release executable 'marty'",
            "cargo": {
                "args": [
                    "build",
                    "-r",
                    "--bin=marty",
                    "--package=marty"
                ],
                "filter": {
                    "name": "marty",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "marty=trace",
                "RUST_LOG_STYLE": "always",
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'marty'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=marty",
                    "--package=marty"
                ],
                "filter": {
                    "name": "marty",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "marty=trace",
                "RUST_LOG_STYLE": "always",
                "RUST_BACKTRACE": "1"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'marty' with validator on",
            "cargo": {
                "args": [
                    "build",
                    "--bin=marty",
                    "--package=marty",
                    "--features=cpu_validator arduino_validator"
                ],
                "filter": {
                    "name": "marty",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "marty=trace",
                "RUST_LOG_STYLE": "always",
                "RUST_BACKTRACE": "1"
            }
        },        
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'marty'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=marty",
                    "--package=marty"
                ],
                "filter": {
                    "name": "marty",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}